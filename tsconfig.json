{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": true,
    "pretty": true,
    "noEmitOnError": true,
    "outDir": "build",
    "rootDir": "src",
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules",
    "typings",
    "build"
  ]
}